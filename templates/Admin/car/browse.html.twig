{% extends "base.html.twig" %}

{% block title %}
	List of cars :
{% endblock %}

{% block body %}
	<div class="container">
		<div class="fs-1 mt-3">
			<h1>Admin - List of all cars</h1>
		</div>
		<div class="row">
			{% for car in cars %}
				<div class="cols-3" style="max-width: 20rem;">
					<a href="{{ path('admin-car-read', {'id': car.id}) }}" style="text-decoration:none">
						<div class="card border-primary my-4">
							<div class="card-header">{{car.carCategory.name}}</div>
							<div class="card-body">
								<h4 class="card-title">{{car.name}}</h4>
								<p class="card-text">Numbers of seats :
									{{car.nbSeats}}</p>
								<p class="card-text">Numbers of doors :
									{{car.nbDoors}}</p>
								<p class="card-text">Price :
									{{car.cost|number_format(0, '', ' ')}}â‚¬</p>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
			<div class="d-flex justify-content-center">
				{{ knp_pagination_render(cars) }}
			</div>
		</div>
	</div>
{% endblock %}
